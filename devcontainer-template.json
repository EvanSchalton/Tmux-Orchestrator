{
  "// Tmux Orchestrator Integration": "Add these sections to your devcontainer.json",
  "// Method 1: Simple pip installation": {
    "postCreateCommand": "apt-get update && apt-get install -y tmux && pip install git+https://github.com/EvanSchalton/Tmux-Orchestrator.git"
  },
  "// Method 2: Poetry-based project": {
    "postCreateCommand": "apt-get update && apt-get install -y tmux && poetry add --group dev git+https://github.com/EvanSchalton/Tmux-Orchestrator.git"
  },
  "// Method 3: Full integration with auto-start": {
    "postCreateCommand": [
      "apt-get update && apt-get install -y tmux",
      "pip install git+https://github.com/EvanSchalton/Tmux-Orchestrator.git",
      "tmux-orc setup all",
      "tmux-orc orchestrator start"
    ],
    "remoteEnv": {
      "TMUX_ORCHESTRATOR_HOME": "${containerWorkspaceFolder}/.tmux_orchestrator"
    }
  },
  "// Method 4: With VS Code integration": {
    "postCreateCommand": [
      "apt-get update && apt-get install -y tmux",
      "pip install git+https://github.com/EvanSchalton/Tmux-Orchestrator.git",
      "tmux-orc setup vscode .",
      "tmux-orc setup claude-code"
    ],
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-vscode.terminal-tabs"
        ]
      }
    }
  },
  "// Recommended features to include": {
    "features": {
      "ghcr.io/devcontainers/features/python:1": {},
      "ghcr.io/devcontainers/features/common-utils:2": {},
      "ghcr.io/devcontainers/features/git:1": {}
    }
  }
}