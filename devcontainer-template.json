{
  "// Tmux Orchestrator Integration": "Add these sections to your devcontainer.json",
  
  "// Method 1: Direct GitHub installation": {
    "postCreateCommand": "curl -sSL https://raw.githubusercontent.com/EvanSchalton/Tmux-Orchestrator/main/bootstrap.sh | bash"
  },
  
  "// Method 2: Local installation (if you have the scripts)": {
    "postCreateCommand": "if [ -f ./references/Tmux-Orchestrator/install.sh ]; then ./references/Tmux-Orchestrator/install.sh; fi"
  },
  
  "// Method 3: Full integration with auto-start": {
    "postCreateCommand": [
      "curl -sSL https://raw.githubusercontent.com/EvanSchalton/Tmux-Orchestrator/main/bootstrap.sh | bash",
      "tmux-orchestrator start"
    ],
    "remoteEnv": {
      "TMUX_ORCHESTRATOR_HOME": "${localEnv:HOME}/.tmux-orchestrator",
      "TMUX_ORCHESTRATOR_AUTO_START": "true"
    }
  },
  
  "// Recommended features to include": {
    "features": {
      "ghcr.io/devcontainers/features/common-utils:2": {},
      "ghcr.io/devcontainers/features/git:1": {}
    }
  },
  
  "// Optional: Custom Claude commands": {
    "postCreateCommand": [
      "curl -sSL https://raw.githubusercontent.com/EvanSchalton/Tmux-Orchestrator/main/bootstrap.sh | bash",
      "mkdir -p .claude/commands",
      "curl -sSL https://raw.githubusercontent.com/EvanSchalton/Tmux-Orchestrator/main/claude-commands.tar.gz | tar -xz -C .claude/commands"
    ]
  }
}